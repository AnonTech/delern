{
  "database": {
    "predeploy": [
      "npm run build"
    ],
    "rules": "database.rules.json"
  },
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "postdeploy": [
      "cd \"$PROJECT_DIR\"/appengine && gcloud --project=\"$GCLOUD_PROJECT\" app deploy --version=ci app.yaml cron.yaml"
    ]
  }
}
